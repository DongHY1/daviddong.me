{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"include": ["src/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"noSvgWithoutTitle": "off"
			},
			"style": {
				"useSelfClosingElements": "off"
			},
			"security":{
				"noDangerouslySetInnerHtml":"off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 100
	}
}
